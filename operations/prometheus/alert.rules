groups:
   - name: alert_rules
     interval: 5s
     rules:
        - alert: container_not_running
          expr: time() - container_last_seen > 10
          for: 1m
          labels:
             severity: critical
          annotations:
             summary: Container "{{ $labels.name }}" not running
             description: 'Container "{{ $labels.name }}" down for more than {{ $value | printf "%.0f" }} seconds'
